/* pages/cropSelect/cropSelect.wxss */
.container {
  padding: 40rpx;
  background-color: #f5f5f5;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.crop-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}

.crop-item {
  width: 45%;
  background-color: white;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.icon {
  font-size: 80rpx;
  margin-bottom: 10rpx;
}

.name {
  font-size: 32rpx;
}