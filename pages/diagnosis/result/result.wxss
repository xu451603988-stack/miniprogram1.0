.page-container {
  padding: 20rpx;
}

.loading-box {
  margin-top: 200rpx;
  text-align: center;
}

.loading-text {
  font-size: 32rpx;
  color: #888;
}

.result-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.title-box {
  text-align: center;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 42rpx;
  font-weight: bold;
}

.subtitle {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #666;
}

.card {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.08);
}

.card-title {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.risk-card {
  text-align: center;
}

.risk-score {
  font-size: 60rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.risk-level {
  margin-top: 10rpx;
  padding: 10rpx 20rpx;
  border-radius: 12rpx;
  display: inline-block;
  color: #fff;
}

.low { background: #4CAF50; }
.mid { background: #FFC107; }
.high { background: #FF5722; }

.risk-item {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.risk-dot {
  width: 12rpx;
  height: 12rpx;
  background: #ff4d4f;
  border-radius: 50%;
  margin-right: 12rpx;
}

.bullet {
  margin-bottom: 10rpx;
}

.advice-item {
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.btn-box {
  margin-top: 40rpx;
}

.btn-primary {
  background: #1AAD19;
  color: white;
  border-radius: 12rpx;
  padding: 20rpx 0;
}
