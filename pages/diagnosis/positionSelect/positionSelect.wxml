<!-- pages/diagnosis/positionSelect/positionSelect.wxml -->
<view class="container">
  <view class="header">
    <text class="title">选择诊断位置</text>
    <text class="subtitle">柑橘：{{crop}}</text>
  </view>

  <view class="position-list">
    <view class="position-card" wx:for="{{positions}}" wx:key="id" 
          data-id="{{item.id}}" data-algorithm="{{item.algorithm}}"
          bindtap="onSelectPosition">
      <text class="icon">{{item.icon}}</text>
      <view class="info">
        <text class="name">{{item.name}}</text>
        <text class="desc">{{item.desc}}</text>
      </view>
      <text class="arrow">›</text>
    </view>
  </view>

  <view class="tips">
    <text>💡 提示：叶片问题通常与根系、土壤相关；果实问题常与营养、环境相关</text>
  </view>
</view>