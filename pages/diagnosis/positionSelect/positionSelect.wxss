/* pages/diagnosis/positionSelect/positionSelect.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.header {
  margin-bottom: 50rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

.position-list {
  margin-bottom: 50rpx;
}

.position-card {
  display: flex;
  align-items: center;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 25rpx rgba(0,0,0,0.1);
  transition: all 0.3s ease;
}

.position-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0,0,0,0.08);
}

.icon {
  font-size: 60rpx;
  margin-right: 30rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.desc {
  font-size: 24rpx;
  color: #888;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
}

.tips {
  padding: 20rpx;
  background: #e8f5e9;
  border-radius: 15rpx;
  border-left: 6rpx solid #2d8c2d;
}

.tips text {
  font-size: 24rpx;
  color: #155724;
  line-height: 1.6;
}