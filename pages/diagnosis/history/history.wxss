.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 24rpx 32rpx 32rpx;
  box-sizing: border-box;
  background: #f5f7fb;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: 16rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

.header-btn {
  padding: 0 28rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  border-radius: 999rpx;
  border: 1px solid #e5e7eb;
  background: #ffffff;
  color: #6b7280;
}

.empty {
  flex: 1;
  padding-top: 140rpx;
  text-align: center;
  color: #9ca3af;
}

.empty-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-sub {
  font-size: 24rpx;
  line-height: 1.6;
  padding: 0 40rpx;
}

.list {
  flex: 1;
  margin-top: 8rpx;
}

.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 28rpx 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(15, 23, 42, 0.06);
  margin-bottom: 24rpx;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.card-header-left {
  display: flex;
  flex-direction: column;
}

.crop {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 8rpx;
}

.tag {
  font-size: 22rpx;
  padding: 0 16rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 999rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
}

.tag.severity.none {
  background: #f3f4f6;
  color: #6b7280;
}

.tag.severity.mild {
  background: #ecfdf3;
  color: #16a34a;
}

.tag.severity.moderate {
  background: #fef9c3;
  color: #eab308;
}

.tag.severity.severe {
  background: #fef2f2;
  color: #dc2626;
}

.tag.subtle {
  background: #eff6ff;
  color: #2563eb;
}

.time {
  font-size: 24rpx;
  color: #9ca3af;
}

.card-body {
  margin-top: 4rpx;
}

.summary-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #374151;
  white-space: pre-wrap;
}

.card-footer {
  margin-top: 12rpx;
}

.footer-text {
  font-size: 22rpx;
  color: #9ca3af;
}
