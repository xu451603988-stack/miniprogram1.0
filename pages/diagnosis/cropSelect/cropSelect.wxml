<!-- pages/diagnosis/cropSelect/cropSelect.wxml -->
<view class="container">
  <view class="header">
    <text class="title">选择作物</text>
  </view>

  <view class="crop-list">
    <view class="crop-card" wx:for="{{crops}}" wx:key="id" 
          data-id="{{item.id}}" bindtap="onSelectCrop">
      <text class="icon">{{item.icon}}</text>
      <view class="info">
        <text class="name">{{item.name}}</text>
        <text class="desc">{{item.desc}}</text>
      </view>
      <text class="arrow">›</text>
    </view>
  </view>
</view>