<!-- pages/form/form.wxml -->
<view class="container">
  <view class="form-title">作物病害诊断</view>
  
  <!-- 叶片症状 -->
  <view class="question">
    <view class="question-text">1. 叶片主要症状？</view>
    <radio-group bindchange="saveAnswer" data-type="leafSpot">
      <label class="option"><radio value="yellow" /> 叶片发黄</label>
      <label class="option"><radio value="spot" /> 有斑点</label>
      <label class="option"><radio value="curl" /> 卷曲</label>
    </radio-group>
  </view>

  <!-- 果实症状 -->
  <view class="question">
    <view class="question-text">2. 果实主要症状？</view>
    <radio-group bindchange="saveAnswer" data-type="fruitStatus">
      <label class="option"><radio value="small" /> 果实偏小</label>
      <label class="option"><radio value="drop" /> 落果</label>
      <label class="option"><radio value="normal" /> 无异常</label>
    </radio-group>
  </view>

  <!-- 植株类型 -->
  <view class="question">
    <view class="question-text">3. 植株类型？</view>
    <radio-group bindchange="saveAnswer" data-type="plantType">
      <label class="option"><radio value="strong" /> 健壮</label>
      <label class="option"><radio value="weak" /> 弱小</label>
    </radio-group>
  </view>

  <!-- 植株气味 -->
  <view class="question">
    <view class="question-text">4. 植株气味？</view>
    <radio-group bindchange="saveAnswer" data-type="plantSmell">
      <label class="option"><radio value="normal" /> 正常</label>
      <label class="option"><radio value="off" /> 异味</label>
    </radio-group>
  </view>

  <!-- 提交按钮 -->
  <button class="submit-btn" bindtap="getDiagnosis">获取诊断结果</button>
</view>