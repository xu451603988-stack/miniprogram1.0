/* pages/form/form.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #2d8c2d;
  text-align: center;
  margin: 20rpx 0 40rpx;
}

.question {
  background-color: white;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}

.question-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.option {
  display: block;
  font-size: 26rpx;
  color: #555;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.option radio {
  margin-right: 15rpx;
  transform: scale(0.8);
}

.submit-btn {
  width: 90%;
  background-color: #2d8c2d;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 60rpx;
  margin: 40rpx auto 20rpx;
}

.submit-btn::after {
  border: none;
}