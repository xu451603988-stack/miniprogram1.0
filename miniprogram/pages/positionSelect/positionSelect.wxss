/* 整体页面容器 */
.page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 40rpx 32rpx 48rpx;
  background-color: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* 头部区域 */
.header {
  margin-bottom: 32rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 12rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 选项列表容器 */
.position-list {
  flex: 1;
}

/* 单个卡片 */
.position-card {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 24rpx 20rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 选中态增加一点边框和底色 */
.position-card-selected {
  border: 2rpx solid #1aad19;
  background-color: #f0fff4;
}

/* 左侧图标 */
.left {
  width: 80rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.icon {
  font-size: 42rpx;
}

/* 中间文字区 */
.middle {
  flex: 1;
  padding: 0 16rpx;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 30rpx;
  font-weight: 500;
  color: #222;
  margin-bottom: 8rpx;
}

.desc {
  font-size: 24rpx;
  color: #888;
  line-height: 1.5;
}

/* 右侧勾选框 */
.right {
  width: 80rpx;
  justify-content: center;
  align-items: center;
  display: flex;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 999rpx;
  border: 2rpx solid #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checkbox.checked {
  border-color: #1aad19;
  background-color: #1aad19;
  color: #ffffff;
}

/* 小提示 */
.hint {
  margin-top: 8rpx;
  margin-bottom: 24rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #999;
}

/* 底部按钮区域 */
.footer {
  padding-top: 8rpx;
}

.start-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #1aad19;
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 999rpx;
  text-align: center;
  border: none;
}

/* 按下态稍微暗一点，让用户知道你真的响应了 */
.start-btn:active {
  background-color: #169216;
}
