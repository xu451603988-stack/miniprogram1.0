/* pages/question/question.wxss */
.container {
  padding: 40rpx;
  background: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.progress-bar {
  position: relative;
  height: 30rpx;
  background: #e0e0e0;
  border-radius: 15rpx;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #2d8c2d, #4ecdc4);
  border-radius: 15rpx;
  transition: width 0.3s ease;
}

.progress-text {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 22rpx;
  color: #666;
}

.question-container {
  flex: 1;
}

.question-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 40rpx;
  padding: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.option {
  display: flex;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 20rpx;
  background: white;
  border-radius: 15rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.08);
}

.option-text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #555;
}

.button-group {
  display: flex;
  gap: 20rpx;
  padding-top: 40rpx;
}

button {
  flex: 1;
  padding: 30rpx;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 500;
}

.next-btn {
  background: linear-gradient(135deg, #2d8c2d, #1a7346);
  color: white;
}

.next-btn[disabled] {
  background: #ccc;
  color: #eee;
}