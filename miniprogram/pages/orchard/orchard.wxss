/* pages/orchard/orchard.wxss */
page {
  background-color: #f6f7f9;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  padding-bottom: 80rpx;
  line-height: 1.5;
}

.container {
  padding: 30rpx 32rpx;
}

/* --- 1. 顶部状态卡片 --- */
.status-card {
  background: linear-gradient(135deg, #2fa348 0%, #207f3a 100%);
  border-radius: 28rpx;
  padding: 40rpx;
  color: white;
  margin-bottom: 30rpx;
  box-shadow: 0 12rpx 30rpx rgba(37, 133, 62, 0.25);
  position: relative;
  overflow: hidden;
}

/* 装饰背景圆 */
.card-bg-circle {
  position: absolute;
  top: -60rpx;
  right: -60rpx;
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  z-index: 0;
}

.status-content {
  position: relative;
  z-index: 1;
}

.status-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.status-title-group {
  display: flex;
  align-items: center;
}

.status-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.status-title {
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.status-badge {
  font-size: 22rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  background: rgba(0, 0, 0, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.9);
}

.status-badge.active {
  background: #fff;
  color: #207f3a;
  font-weight: 700;
  border: none;
}

.status-desc {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.5;
  display: block;
}

/* --- 2. 通用内容卡片 --- */
.section-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.03);
}

.card-title {
  font-size: 30rpx;
  font-weight: 700;
  padding: 32rpx 0 24rpx;
  color: #1a1a1a;
  border-bottom: 2rpx solid #f9f9f9;
}

/* 位置选择框 */
.location-box {
  display: flex;
  align-items: center;
  padding: 32rpx 0 40rpx;
}

.location-icon-wrap {
  width: 88rpx;
  height: 88rpx;
  border-radius: 20rpx;
  background: #f0f9f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  flex-shrink: 0;
}

.location-icon {
  font-size: 40rpx;
}

.location-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.location-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.location-name.placeholder {
  color: #2fa348; /* 引导点击的颜色 */
  font-weight: 600;
}

.location-address {
  font-size: 24rpx;
  color: #999;
  line-height: 1.4;
  /* 限制两行 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 表单项 */
.form-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 36rpx 0;
  min-height: 100rpx;
}

.label {
  font-size: 30rpx;
  color: #333;
}

.picker-value-group {
  display: flex;
  align-items: center;
}

.picker-value {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.input-wrap {
  display: flex;
  align-items: center;
}

.input {
  text-align: right;
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
  width: 120rpx;
  margin-right: 12rpx;
  height: 100%;
}

.input-placeholder {
  color: #ccc;
  font-weight: 400;
}

.unit {
  font-size: 30rpx;
  color: #666;
}

.divider {
  height: 2rpx;
  background: #f5f5f5;
  width: 100%;
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
  margin-left: 12rpx;
  font-weight: 300;
}

/* --- 3. 农事任务卡片 --- */
.task-card {
  border-top: 8rpx solid #2fa348;
  padding-bottom: 40rpx;
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 32rpx;
  margin-bottom: 24rpx;
}

.month-badge {
  display: flex;
  align-items: baseline;
}

.month-num {
  font-size: 56rpx;
  font-weight: 800;
  color: #2fa348;
  margin-right: 8rpx;
  line-height: 1;
}

.month-text {
  font-size: 28rpx;
  color: #666;
  font-weight: 500;
}

.task-phenology {
  font-size: 24rpx;
  color: #207f3a;
  background: #eef7f0;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-weight: 600;
}

.task-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 40rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx dashed #eee;
  line-height: 1.4;
}

.task-section {
  margin-bottom: 36rpx;
}

.task-section.last {
  margin-bottom: 0;
}

.sec-header {
  font-size: 30rpx;
  font-weight: 700;
  color: #1a1a1a;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
}

.sec-icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.task-item {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 12rpx;
  display: flex;
  align-items: flex-start;
}

.dot {
  color: #2fa348;
  margin-right: 12rpx;
  font-weight: bold;
}

.sec-content {
  font-size: 28rpx;
  color: #555;
  line-height: 1.7;
  display: block;
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 12rpx;
}

/* --- 4. 底部按钮 --- */
.footer {
  margin-top: 60rpx;
  padding: 0 20rpx;
}

.save-btn {
  background: linear-gradient(90deg, #2fa348, #269040);
  color: #fff;
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 600;
  height: 96rpx;
  line-height: 96rpx;
  box-shadow: 0 10rpx 24rpx rgba(47, 163, 72, 0.3);
  border: none;
}

.save-btn-hover {
  background: linear-gradient(90deg, #269040, #1e7032);
  transform: scale(0.99);
}