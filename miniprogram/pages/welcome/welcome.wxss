page {
  background-color: #1d8235; /* 保持您的绿色背景 */
  color: #fff;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  height: 100%;
  overflow: hidden;
}

.container {
  padding: 60rpx 40rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 顶部文案 */
.header { margin-top: 40rpx; }
.tag {
  background: rgba(255,255,255,0.2);
  padding: 6rpx 20rpx; border-radius: 30rpx;
  font-size: 24rpx; display: inline-block; margin-bottom: 20rpx;
}
.title { font-size: 64rpx; font-weight: bold; line-height: 1.2; display: block; margin-bottom: 20rpx; }
.subtitle { font-size: 28rpx; opacity: 0.8; line-height: 1.5; display: block; max-width: 600rpx; }

/* 核心操作区 */
.main-action-area { width: 100%; }

/* 开始诊断大卡片 */
.start-card {
  background: #fff; border-radius: 30rpx;
  padding: 40rpx; display: flex; align-items: center;
  color: #333; margin-bottom: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0,0,0,0.1);
  transition: transform 0.1s;
}
.start-card:active { transform: scale(0.98); }

.icon-circle {
  width: 100rpx; height: 100rpx; border-radius: 50%;
  background: #e8f5e9; display: flex; align-items: center; justify-content: center;
  margin-right: 30rpx; position: relative;
}
.icon-emoji { font-size: 50rpx; }
.main-icon { width: 60%; height: 60%; position: absolute; opacity: 0; } /* 备用 */

.text-group { flex: 1; }
.card-title { font-size: 40rpx; font-weight: bold; display: block; margin-bottom: 8rpx; }
.card-desc { font-size: 24rpx; color: #666; }

.arrow-btn {
  width: 60rpx; height: 60rpx; border-radius: 50%;
  background: #1d8235; color: #fff; display: flex;
  align-items: center; justify-content: center; font-weight: bold;
}

/* 底部三列菜单 */
.grid-menu {
  display: flex;
  justify-content: space-between;
}

.grid-item {
  background: rgba(255,255,255,0.15);
  border-radius: 24rpx;
  width: 31%; /* 三等分 */
  padding: 30rpx 0;
  display: flex; flex-direction: column; align-items: center; justify-content: center;
  backdrop-filter: blur(10px);
}
.grid-item:active { background: rgba(255,255,255,0.25); }

/* 会员中心特殊样式 */
.vip-item {
  background: linear-gradient(135deg, rgba(255,237,201,0.2), rgba(255,237,201,0.1));
  border: 1rpx solid rgba(255,237,201,0.3);
}
.vip-item .grid-label { color: #ffedc9; font-weight: bold; }

.grid-icon { font-size: 48rpx; margin-bottom: 16rpx; }
.grid-label { font-size: 26rpx; color: #fff; }

.footer { text-align: center; font-size: 22rpx; opacity: 0.6; margin-bottom: 20rpx; }