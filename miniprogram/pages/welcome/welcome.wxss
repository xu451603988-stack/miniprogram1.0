/* pages/welcome/welcome.wxss */
.container {
  padding: 80rpx 40rpx;
  background: linear-gradient(135deg, #2d8c2d 0%, #1a7346 100%);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.header {
  text-align: center;
  margin-bottom: 100rpx;
}

.logo {
  font-size: 120rpx;
  display: block;
  margin-bottom: 30rpx;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
  display: block;
}

.subtitle {
  font-size: 26rpx;
  color: rgba(255,255,255,0.85);
  display: block;
}

.start-btn {
  width: 80%;
  background: white;
  color: #2d8c2d;
  font-size: 32rpx;
  font-weight: bold;
  padding: 30rpx;
  border-radius: 60rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.2);
  margin-bottom: 80rpx;
}

.start-btn:active {
  transform: scale(0.98);
}

.features {
  display: flex;
  justify-content: space-around;
  width: 100%;
}

.feature-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.feature-item .icon {
  font-size: 50rpx;
  margin-bottom: 15rpx;
  color: white;
}

.feature-item text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
}