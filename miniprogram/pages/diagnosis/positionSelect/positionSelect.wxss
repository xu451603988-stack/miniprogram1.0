/* miniprogram/pages/diagnosis/positionSelect/positionSelect.wxss */

/* 整体容器 */
.page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 32rpx 24rpx 40rpx;
  background: linear-gradient(180deg, #ecfdf3 0%, #f9fafb 40%, #f3f4f6 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部文案 */
.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 24rpx;
  line-height: 1.6;
  color: #6b7280;
}

/* 列表 */
.position-list {
  display: flex;
  flex-direction: column;
  row-gap: 20rpx;
}

/* 单个位置卡片 */
.position-card {
  display: flex;
  align-items: center;
  padding: 26rpx 24rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  border: 2rpx solid transparent;
  box-shadow: 0 12rpx 36rpx rgba(15, 23, 42, 0.06);
  transition: border-color 0.15s ease-out,
              box-shadow 0.15s ease-out,
              transform 0.15s ease-out;
}

/* 选中高亮 */
.position-card-selected {
  border-color: #22c55e;
  box-shadow: 0 16rpx 44rpx rgba(34, 197, 94, 0.18);
}

/* 按压效果 */
.position-card:active {
  transform: translateY(2rpx) scale(0.99);
}

/* 左侧图标 */
.left {
  margin-right: 20rpx;
}

.icon {
  font-size: 52rpx;
}

/* 中间文字 */
.middle {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 6rpx;
}

.desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* 右侧勾选圈 */
.right {
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #d1d5db;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 26rpx;
}

.checkbox.checked {
  background-color: #22c55e;
  border-color: #22c55e;
}

/* 底部提示和按钮 */
.hint {
  margin-top: 32rpx;
}

.hint-text {
  font-size: 22rpx;
  color: #9ca3af;
  line-height: 1.6;
}

.footer {
  margin-top: auto;
  padding-top: 24rpx;
}

.start-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 999rpx;
  border: none;
  font-size: 30rpx;
  font-weight: 500;
  color: #ffffff;
  background: linear-gradient(90deg, #22c55e, #16a34a);
}

.start-btn:active {
  opacity: 0.9;
}

button::after {
  border: none;
}
