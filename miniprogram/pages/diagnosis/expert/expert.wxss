page {
  background: #f4f5f7;
}

.page {
  padding: 24rpx;
}

.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 28rpx;
  box-shadow: 0 6rpx 20rpx rgba(0,0,0,0.05);
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.desc {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.7;
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.label {
  width: 140rpx;
  font-size: 26rpx;
  color: #374151;
}

.value {
  flex: 1;
  font-size: 26rpx;
  color: #111827;
}

.mini-btn {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 999rpx;
}

.tips {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #9ca3af;
}
