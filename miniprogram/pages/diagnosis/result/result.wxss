/* V4.0 样式 */
.page-v4 {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 结果卡片 */
.result-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05);
  border-left: 10rpx solid #ddd;
}

/* 风险等级配色 */
.result-card.severe { border-left-color: #ff4d4f; }
.result-card.moderate { border-left-color: #faad14; }
.result-card.mild { border-left-color: #52c41a; }

.result-card.severe .risk-badge { background: #fff1f0; color: #ff4d4f; }
.result-card.moderate .risk-badge { background: #fffbe6; color: #faad14; }
.result-card.mild .risk-badge { background: #f6ffed; color: #52c41a; }

.card-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.risk-badge {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 10rpx;
  font-weight: bold;
}

.date {
  font-size: 24rpx;
  color: #999;
}

.diagnosis-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.tags-row .tag {
  display: inline-block;
  background: #f0f2f5;
  color: #666;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

/* 通用板块 */
.section-box {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.section-title .icon {
  margin-right: 10rpx;
}

.logic-content {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
  background: #f9f9f9;
  padding: 20rpx;
  border-radius: 12rpx;
}

/* 方案列表 */
.solution-item {
  display: flex;
  margin-bottom: 20rpx;
}

.sol-type {
  width: 80rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  background: #e6f7ff;
  color: #1890ff;
  font-size: 22rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.sol-text {
  flex: 1;
  font-size: 28rpx;
  color: #444;
  line-height: 1.5;
}

/* 底部按钮 */
.footer-btn-group {
  margin-top: 60rpx;
  display: flex;
  gap: 30rpx;
}

.btn-primary {
  flex: 1;
  background: #2d8c2d;
  color: white;
  border-radius: 50rpx;
}

.btn-secondary {
  flex: 1;
  background: white;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 50rpx;
}