/* --- 新增交互样式 --- */

/* 按钮点击时的按压效果 */
.btn-hover {
  opacity: 0.8;
  transform: scale(0.98);
  transition: all 0.1s;
}

/* 列表项点击高亮 */
.item-hover {
  background-color: #f0f0f0;
}

/* 文字链接点击变色 */
.text-hover {
  color: #666;
}

/* 空状态样式优化 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  color: #999;
  font-size: 26rpx;
  background: #f9f9f9;
  border-radius: 12rpx;
  border: 1px dashed #eee;
}

/* 旧版兼容页简单样式 */
.page-legacy {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  padding: 40rpx;
  background: #fff;
}
.legacy-text {
  margin-top: 20rpx;
  color: #666;
}