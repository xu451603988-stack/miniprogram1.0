/* miniprogram/pages/diagnosis/result/result.wxss */
page {
  background: #f0fdf4; /* 浅绿底色 */
  padding-bottom: 60rpx;
}

.page-v5 {
  padding: 30rpx;
}

/* --- 结果卡片 --- */
.result-card {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 12rpx 30rpx rgba(0,0,0,0.06);
  border-top: 12rpx solid #ddd;
  position: relative;
}

/* 动态颜色边框 */
.result-card.severe { border-top-color: #ef4444; }   /* 红 */
.result-card.moderate { border-top-color: #f59e0b; } /* 橙 */
.result-card.mild { border-top-color: #22c55e; }     /* 绿 */

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.risk-badge {
  display: inline-flex;
  align-items: center;
  background: #f3f4f6;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  font-weight: 700;
  color: #374151;
}

.risk-icon { margin-right: 8rpx; }
.time-tag { font-size: 24rpx; color: #9ca3af; }

.main-title {
  font-size: 48rpx;
  font-weight: 800;
  color: #111827;
  margin-bottom: 24rpx;
  line-height: 1.2;
}

.tags-row {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 40rpx;
}

.tag-item {
  font-size: 22rpx;
  color: #15803d;
  background: #dcfce7;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 600;
}

/* 风险条 */
.risk-bar-box {
  display: flex;
  align-items: center;
}

.risk-label {
  font-size: 22rpx;
  color: #9ca3af;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.risk-track {
  flex: 1;
  height: 12rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  overflow: hidden;
}

.risk-fill {
  height: 100%;
  border-radius: 10rpx;
  transition: width 1s ease-out;
}

/* 填充色 */
.result-card.severe .risk-fill { background: linear-gradient(90deg, #f87171, #ef4444); }
.result-card.moderate .risk-fill { background: linear-gradient(90deg, #fbbf24, #f59e0b); }
.result-card.mild .risk-fill { background: linear-gradient(90deg, #86efac, #22c55e); }

/* --- 通用板块 --- */
.section-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.03);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.sec-icon { margin-right: 12rpx; font-size: 34rpx; }

.logic-text {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.8;
  text-align: justify;
}

/* --- 方案列表 --- */
.solution-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.solution-item {
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 24rpx;
}

.sol-type {
  display: inline-block;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
}

.cure-type { background: #e0f2fe; color: #0369a1; }
.root-type { background: #f0fdf4; color: #15803d; }

.sol-content {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
}

/* --- 底部 --- */
.footer-area {
  margin-top: 60rpx;
}

.btn-group {
  display: flex;
  gap: 24rpx;
  margin-bottom: 30rpx;
}

.btn-primary {
  flex: 1.5;
  height: 96rpx;
  line-height: 96rpx;
  background: linear-gradient(135deg, #166534 0%, #15803d 100%);
  color: white;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 10rpx 20rpx rgba(22, 101, 52, 0.2);
}

.btn-secondary {
  flex: 1;
  height: 96rpx;
  line-height: 96rpx;
  background: #ffffff;
  color: #4b5563;
  border: 1rpx solid #e5e7eb;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

.expert-link {
  text-align: center;
  color: #9ca3af;
  font-size: 24rpx;
  padding: 20rpx;
}