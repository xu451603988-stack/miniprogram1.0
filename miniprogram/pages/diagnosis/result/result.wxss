page {
  background: #f3f4f6;
}

/* 页面容器 */
.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

/* 顶部 Summary 卡片 */
.summary-card {
  background: #ffffff;
  padding: 40rpx 40rpx 28rpx;
  box-shadow: 0 6rpx 24rpx rgba(15, 23, 42, 0.06);
  border-radius: 0 0 24rpx 24rpx;
}

.summary-top-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.summary-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.summary-desc {
  margin-top: 10rpx;
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* 顶部状态 pill */
.summary-pill {
  padding: 6rpx 22rpx;
  border-radius: 999rpx;
  border-width: 1rpx;
  border-style: solid;
}

.summary-pill-text {
  font-size: 24rpx;
}

.pill-normal {
  background: #ecfdf5;
  border-color: #6ee7b7;
  color: #059669;
}

.pill-warning {
  background: #fffbeb;
  border-color: #facc15;
  color: #b45309;
}

.pill-danger {
  background: #fef2f2;
  border-color: #fecaca;
  color: #b91c1c;
}

/* 内容滚动区 */
.scroll-area {
  flex: 1;
  padding: 20rpx 28rpx 30rpx;
}

/* 卡片通用样式 */
.section-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx 28rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 28rpx rgba(15, 23, 42, 0.07);
  transform-origin: center;
}

/* 渐入动画 */
.card-animate {
  opacity: 0;
  transform: translateY(16rpx);
  animation: fadeUp 0.4s ease-out forwards;
}

@keyframes fadeUp {
  from {
    opacity: 0;
    transform: translateY(16rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 卡片头部 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14rpx;
}

.section-header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1f2937;
}

/* 模块图标圆圈 */
.icon-circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.icon-global {
  background: #e0f2fe;
  color: #0284c7;
}

.icon-leaf {
  background: #dcfce7;
}

.icon-fruit {
  background: #fff7ed;
}

.icon-root {
  background: #ecfeff;
}

.icon-single {
  background: #eef2ff;
}

.icon-detail {
  background: #fef3c7;
}

/* 严重程度标签 */
.severity-tag {
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  border: 1rpx solid #d1d5db;
  background-color: #f3f4f6;
}

.severity-normal {
  color: #059669;
  border-color: #6ee7b7;
  background: #ecfdf5;
}

.severity-warning {
  color: #b45309;
  border-color: #facc15;
  background: #fffbeb;
}

.severity-danger {
  color: #b91c1c;
  border-color: #fecaca;
  background: #fef2f2;
}

/* 文本内容 */
.section-body {
  margin-top: 4rpx;
}

.main-text {
  font-size: 28rpx;
  line-height: 1.75;
  color: #374151;
}

.advice-block {
  margin-top: 16rpx;
}

.advice-title {
  font-size: 26rpx;
  color: #111827;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.advice-text {
  font-size: 26rpx;
  line-height: 1.7;
  color: #4b5563;
}

/* 子弹点列表 */
.bullet-item {
  display: flex;
  flex-direction: row;
  margin-bottom: 12rpx;
}

.bullet-dot {
  width: 12rpx;
  height: 12rpx;
  background: #22c55e;
  border-radius: 999rpx;
  margin-top: 14rpx;
  margin-right: 12rpx;
}

.bullet-text {
  flex: 1;
  color: #374151;
  font-size: 26rpx;
  line-height: 1.7;
}

/* 底部按钮区 */
.footer {
  display: flex;
  flex-direction: row;
  padding: 22rpx 32rpx 38rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(15, 23, 42, 0.06);
  gap: 22rpx;
}

.btn-primary {
  flex: 1;
  background: #10b981;
  color: #ffffff;
  padding: 26rpx 0;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.btn-secondary {
  flex: 1;
  background: #f3f4f6;
  color: #111827;
  padding: 26rpx 0;
  border-radius: 999rpx;
  font-size: 30rpx;
  border: 2rpx solid #e5e7eb;
}
