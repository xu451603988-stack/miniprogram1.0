page {
  background: #f4f5f7;
}

.welcome-page {
  min-height: 100vh;
  padding: 48rpx 32rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 顶部大图区域 */
.hero {
  padding: 40rpx 32rpx 32rpx;
  border-radius: 28rpx;
  background: linear-gradient(135deg, #1677ff, #34d399);
  color: #ffffff;
  box-shadow: 0 18rpx 40rpx rgba(22, 119, 255, 0.32);
}

.hero-title-row {
  display: flex;
  align-items: center;
}

.logo-dot {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background: #ffffff;
  margin-right: 12rpx;
}

.hero-title {
  font-size: 36rpx;
  font-weight: 700;
}

.hero-subtitle {
  margin-top: 18rpx;
  font-size: 26rpx;
  line-height: 1.7;
  opacity: 0.9;
}

.hero-badge-row {
  margin-top: 26rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  gap: 16rpx;
}

.hero-badge {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.92);
  color: #0f172a;
  font-size: 22rpx;
  font-weight: 600;
}

.hero-badge-light {
  background: rgba(255, 255, 255, 0.2);
  color: #ecfdf5;
  font-weight: 400;
}

/* 功能亮点卡片 */
.feature-card {
  margin-top: 36rpx;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 24rpx 22rpx;
  box-shadow: 0 10rpx 26rpx rgba(15, 23, 42, 0.06);
}

.feature-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
}

.feature-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 18rpx;
  background: #eff6ff;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  font-size: 34rpx;
}

.feature-text {
  flex: 1;
}

.feature-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.feature-desc {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}

.divider {
  height: 1rpx;
  background: #e5e7eb;
  margin: 20rpx 0;
}

/* 底部区域 */
.bottom-area {
  margin-top: auto;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.btn-primary {
  background: #1677ff;
  color: #ffffff;
  border-radius: 999rpx;
  font-size: 32rpx;
  font-weight: 600;
  padding: 24rpx 0;
}

.btn-secondary {
  background: #ffffff;
  color: #1677ff;
  border-radius: 999rpx;
  font-size: 28rpx;
  padding: 22rpx 0;
  border: 2rpx solid #d1e0ff;
}

.tip-text {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #9ca3af;
  line-height: 1.6;
}
