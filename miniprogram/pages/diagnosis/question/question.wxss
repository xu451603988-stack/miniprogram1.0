/* miniprogram/pages/diagnosis/question/question.wxss */

/* 整体背景 */
.page-container {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 30rpx 24rpx;
  background: #f0f9f0; /* 浅绿护眼背景 */
  display: flex;
  flex-direction: column;
}

/* 顶部导航 */
.nav-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
  color: #555;
  font-size: 28rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background: rgba(255,255,255,0.6);
  border-radius: 30rpx;
}

.back-icon {
  font-size: 36rpx;
  margin-right: 6rpx;
  margin-top: -4rpx; /* 微调对齐 */
}

/* 问题卡片 */
.question-card {
  background: white;
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 16rpx 40rpx rgba(45, 140, 45, 0.08);
  margin-bottom: 40rpx;
}

.question-title-box {
  display: flex;
  align-items: flex-start;
  margin-bottom: 60rpx;
}

.q-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  margin-top: 4rpx;
}

.question-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.5;
}

/* 选项列表 */
.options-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.option-item {
  position: relative;
  background: #f8fcf8;
  border: 2rpx solid #e2efe2;
  border-radius: 20rpx;
  padding: 32rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.2s ease;
}

/* 点击态 */
.option-hover {
  background: #eefbee;
  border-color: #2d8c2d;
  transform: scale(0.98);
}

.option-dot {
  width: 12rpx;
  height: 12rpx;
  background: #2d8c2d;
  border-radius: 50%;
  margin-right: 20rpx;
  opacity: 0.6;
}

.option-label {
  flex: 1;
  font-size: 30rpx;
  color: #444;
  font-weight: 500;
}

.option-arrow {
  color: #ccc;
  font-size: 32rpx;
}

/* 底部提示 */
.footer-hint {
  margin-top: auto;
  text-align: center;
  padding-bottom: 20rpx;
}

.footer-hint text {
  font-size: 22rpx;
  color: #999;
  background: rgba(0,0,0,0.03);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
}

/* 动画效果 */
.fade-in {
  animation: fadeIn 0.4s ease-out;
}

@keyframes fadeIn {
  from { 
    opacity: 0; 
    transform: translateY(20rpx); 
  }
  to { 
    opacity: 1; 
    transform: translateY(0); 
  }
}

/* 加载中 */
.loading-box {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
  color: #999;
  font-size: 28rpx;
}