/* pages/diagnosis/question/question.wxss */

/* 整体背景 */
.page-container {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 32rpx 24rpx 32rpx;
  background: linear-gradient(180deg, #ecfdf3 0%, #f9fafb 40%, #f3f4f6 100%);
}

/* 加载态 */
.loading-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f4f7fb;
}

.loading-text {
  font-size: 26rpx;
  color: #6b7280;
}

/* 进度条 */
.progress-bar {
  height: 10rpx;
  border-radius: 999rpx;
  background: #e5e7eb;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.progress-fill {
  height: 100%;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #22c55e, #16a34a);
  transition: width 0.25s ease-out;
}

/* 题目卡片 */
.question-container {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 28rpx 24rpx 32rpx;
  box-shadow: 0 18rpx 48rpx rgba(15, 23, 42, 0.08);
}

/* 题目标题 */
.question-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  line-height: 1.6;
  margin-bottom: 24rpx;
  border-left: 6rpx solid #22c55e;
  padding-left: 16rpx;
}

/* 选项组 */
.option-group {
  display: flex;
  flex-direction: column;
  row-gap: 16rpx;
}

/* 单个选项卡片 */
.option-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 22rpx 20rpx;
  border-radius: 18rpx;
  border: 2rpx solid #e5e7eb;
  background-color: #f9fafb;
  transition: border-color 0.15s ease-out,
              background-color 0.15s ease-out,
              box-shadow 0.15s ease-out,
              transform 0.15s ease-out;
}

/* 选中高亮 */
.option-item-active {
  border-color: #22c55e;
  background-color: #ecfdf3;
  box-shadow: 0 12rpx 34rpx rgba(34, 197, 94, 0.22);
  transform: translateY(-2rpx);
}

/* 原生控件 */
.option-item radio,
.option-item checkbox {
  margin-right: 16rpx;
  transform: scale(0.9);
}

.option-text {
  flex: 1;
  font-size: 28rpx;
  color: #111827;
}

/* 底部按钮区域 */
.bottom-buttons {
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
}

.bottom-buttons button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 999rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

/* 上一题 */
.btn-secondary {
  margin-right: 16rpx;
  background-color: #e5f0ff;
  color: #1d4ed8;
  border: none;
}

/* 下一题 */
.btn-primary {
  margin-left: 16rpx;
  background: linear-gradient(90deg, #22c55e, #16a34a);
  color: #ffffff;
  border: none;
}

/* 禁用态 */
.btn-primary[disabled] {
  opacity: 0.45;
}

/* 去掉默认描边 */
button::after {
  border: none;
}
