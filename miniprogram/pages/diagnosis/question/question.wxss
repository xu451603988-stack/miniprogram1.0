/* miniprogram/pages/diagnosis/question/question.wxss */

/* 全局容器 */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F5F7FA; /* 云雾白背景 */
  box-sizing: border-box;
}

/* === 顶部区域 === */
.header-section {
  background: #fff;
  padding: 30rpx 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 10;
}

.step-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-bottom: 20rpx;
}

.step-num {
  font-size: 28rpx;
  color: #4CAF50;
  font-weight: bold;
  background: rgba(76, 175, 80, 0.1);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.step-name {
  font-size: 34rpx;
  color: #333;
  font-weight: 600;
}

/* 进度条轨道 */
.progress-track {
  height: 8rpx;
  background: #E0E0E0;
  border-radius: 4rpx;
  overflow: hidden;
}

/* 进度条本身 */
.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #81C784, #4CAF50);
  border-radius: 4rpx;
  transition: width 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
}

/* === 内容滚动区 === */
.content-scroll {
  flex: 1;
  width: 100%;
}

.question-container {
  padding: 30rpx;
}

/* === 问题卡片 === */
.question-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.03);
  /* 简单的淡入动画 */
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(10px); }
  to { opacity: 1; transform: translateY(0); }
}

.card-header {
  display: flex;
  align-items: flex-start;
  margin-bottom: 12rpx;
}

.tag-required {
  background: #FF5252;
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
  margin-right: 12rpx;
  margin-top: 6rpx;
  flex-shrink: 0;
}

.question-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  line-height: 1.4;
}

.question-desc {
  font-size: 26rpx;
  color: #909399;
  margin-bottom: 30rpx;
  margin-left: 56rpx; /* 对齐标题 */
}

/* === 选项组 === */
.options-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 单个选项 */
.option-item {
  position: relative;
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  background: #F9FAFC;
  border: 2rpx solid transparent;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

/* 选项点击态 */
.option-hover {
  background: #f0f0f0;
}

/* 选中状态 */
.option-item.active {
  background: #E8F5E9; /* 浅绿背景 */
  border-color: #4CAF50;
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.15);
}

/* 模拟 Radio 圈圈 */
.radio-box {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 2rpx solid #C0C4CC;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  background: #fff;
}

.option-item.active .radio-box {
  border-color: #4CAF50;
}

.radio-core {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background: #4CAF50;
}

.option-text {
  font-size: 28rpx;
  color: #555;
  flex: 1;
}

.option-item.active .option-text {
  color: #2E7D32;
  font-weight: 500;
}

/* === 底部按钮区 === */
.bottom-spacer {
  height: 120rpx; /* 留出底部空间 */
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 20rpx 40rpx calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.btn-wrapper {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
}

button {
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: bold;
  border: none;
  line-height: 88rpx;
  margin: 0;
}

button::after {
  border: none;
}

.btn-prev {
  width: 30% !important;
  background: #F0F2F5;
  color: #606266;
}

.btn-next {
  width: 65% !important;
  background: linear-gradient(135deg, #66BB6A, #4CAF50);
  color: #fff;
  box-shadow: 0 6rpx 16rpx rgba(76, 175, 80, 0.3);
}

.btn-next.full-width {
  width: 100% !important;
}

.btn-hover {
  opacity: 0.9;
  transform: scale(0.98);
}