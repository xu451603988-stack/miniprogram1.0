/* pages/diagnosis/cropSelect/cropSelect.wxss */

/* 整体背景 */
.page {
  min-height: 100vh;
  box-sizing: border-box;
  padding: 32rpx 24rpx 40rpx;
  background: linear-gradient(180deg, #ecfdf3 0%, #f9fafb 40%, #f3f4f6 100%);
  display: flex;
  flex-direction: column;
}

/* 顶部标题 */
.header {
  padding: 8rpx 4rpx 24rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111827;
}

/* 列表区域 */
.crop-list {
  display: flex;
  flex-direction: column;
  row-gap: 24rpx;
  margin-top: 8rpx;
}

/* 单个作物卡片 */
.crop-card {
  display: flex;
  align-items: center;
  padding: 26rpx 24rpx;
  border-radius: 24rpx;
  background-color: #ffffff;
  box-shadow: 0 14rpx 40rpx rgba(15, 23, 42, 0.06);
  transition: transform 0.15s ease-out, box-shadow 0.15s ease-out;
}

/* 点击轻微按压 */
.crop-card:active {
  transform: translateY(2rpx) scale(0.99);
  box-shadow: 0 8rpx 28rpx rgba(15, 23, 42, 0.08);
}

/* “开发中” 灰掉 */
.crop-card.disabled {
  opacity: 0.45;
}

/* 左侧：图标 + 文本 */
.left {
  flex: 1;
  display: flex;
  align-items: center;
}

.icon {
  width: 80rpx;
  text-align: center;
  font-size: 56rpx;
  margin-right: 22rpx;
}

.text-group {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 6rpx;
}

.desc {
  font-size: 24rpx;
  color: #6b7280;
}

/* 右侧箭头 / 徽章 */
.right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  min-width: 80rpx;
}

.arrow {
  font-size: 40rpx;
  color: #cbd5e1;
}

/* 开发中标签 */
.badge {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: #fee2e2;
}

.badge-text {
  font-size: 22rpx;
  color: #b91c1c;
}
