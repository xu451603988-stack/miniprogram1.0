/* pages/diagnosis/history/history.wxss */
page {
  background-color: #f7f8fa; /* 统一浅灰底色 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  color: #333;
  box-sizing: border-box;
  padding-bottom: 40rpx;
}

.page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 30rpx 32rpx; 
}

/* --- 顶部标题栏 --- */
.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
  padding: 0 10rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.header-btn {
  margin: 0;
  padding: 0 24rpx;
  height: 56rpx;
  line-height: 56rpx;
  font-size: 26rpx;
  color: #666;
  background: #ffffff;
  border: 1rpx solid #e0e0e0;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.02);
}

.header-btn:active {
  background-color: #f5f5f5;
}

/* --- 空状态 --- */
.empty {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 200rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-sub {
  font-size: 26rpx;
  color: #999;
}

/* --- 列表区域 --- */
.list {
  flex: 1;
  /* 隐藏滚动条 */
  -webkit-overflow-scrolling: touch;
}

/* --- 诊断记录卡片 (核心优化) --- */
.card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 36rpx;
  margin-bottom: 24rpx;
  /* 柔和阴影，增加悬浮感 */
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.03);
  position: relative;
  overflow: hidden;
}

.card:active {
  transform: scale(0.995);
  transition: transform 0.1s;
}

/* 卡片顶部：作物 + 状态 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx solid #f7f8fa; /* 极淡的分割线 */
}

.card-header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.crop {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a1a;
}

.time {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 400;
}

/* 状态标签 */
.tag {
  padding: 6rpx 18rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
}

/* 不同等级的颜色配置 */
.tag.none {
  background: #f3f4f6;
  color: #6b7280;
}

.tag.mild {
  background: #ecfdf5; /* 浅绿底 */
  color: #059669; /* 深绿字 */
}

.tag.moderate {
  background: #fffbeb; /* 浅黄底 */
  color: #d97706; /* 深橘字 */
}

.tag.severe {
  background: #fef2f2; /* 浅红底 */
  color: #dc2626; /* 深红字 */
}

/* 卡片中间：结论摘要 */
.card-body {
  margin-bottom: 20rpx;
}

.summary-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: block;
}

.summary-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #374151;
  font-weight: 500;
  /* 限制最多显示3行，超出省略 */
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* 卡片底部：风险概览 */
.card-footer {
  background: #f9fafb;
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  display: flex;
  align-items: center;
}

.footer-icon {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.footer-text {
  font-size: 22rpx;
  color: #6b7280;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}