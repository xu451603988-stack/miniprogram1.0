<view class="container">
  <view class="header">
    <view class="title">请选择作物</view>
    <view class="subtitle">Select Your Crop</view>
  </view>

  <view class="grid-container">
    <block wx:for="{{crops}}" wx:key="id">
      <view 
        class="crop-card {{item.active ? '' : 'disabled'}}" 
        bindtap="selectCrop" 
        data-id="{{item.id}}" 
        data-name="{{item.name}}"
        data-active="{{item.active}}"
      >
        <view class="icon">{{item.icon}}</view>
        <view class="info">
          <text class="name">{{item.name}}</text>
          <text class="desc">{{item.desc}}</text>
        </view>
        
        <view class="tag" wx:if="{{!item.active}}">开发中</view>
        <view class="arrow" wx:else>→</view>
      </view>
    </block>
  </view>
</view>