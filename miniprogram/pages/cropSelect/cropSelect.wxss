/* miniprogram/pages/cropSelect/cropSelect.wxss */
page {
  background-color: #F6F6F6;
  padding: 40rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 60rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.grid-container {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.crop-card {
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  position: relative;
  overflow: hidden;
  transition: all 0.2s;
}

.crop-card:active {
  transform: scale(0.98);
}

.icon {
  font-size: 80rpx;
  margin-right: 30rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.desc {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  font-size: 40rpx;
  color: #ccc;
  font-weight: bold;
}

/* 禁用/开发中状态样式 */
.crop-card.disabled {
  background: #f0f0f0;
  opacity: 0.8;
}

.crop-card.disabled .name {
  color: #999;
}

.crop-card.disabled .icon {
  filter: grayscale(100%);
}

.tag {
  position: absolute;
  top: 0;
  right: 0;
  background: #ccc;
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-bottom-left-radius: 12rpx;
}