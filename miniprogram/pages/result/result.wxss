/* V4.0 样式 */
.page-v4 {
  padding: 30rpx;
  background: var(--bg-color-light); /* 使用全局变量 */
  min-height: 100vh;
  box-sizing: border-box;
}

/* --- 结果卡片 --- */
.result-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.05);
  border-top: 10rpx solid #ddd; /* 改为顶部色条，更现代 */
  position: relative;
  overflow: hidden;
}

/* 风险等级配色 (对应 app.js 里的 class) */
.result-card.severe { border-top-color: #ff4d4f; }
.result-card.moderate { border-top-color: #faad14; }
.result-card.mild { border-top-color: #52c41a; }

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.risk-tag {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  font-weight: 700;
  color: #333;
  background: #f5f5f5;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
}

.risk-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

.date {
  font-size: 22rpx;
  color: #ccc;
}

.diagnosis-name {
  font-size: 44rpx;
  font-weight: 800;
  color: #1a1a1a;
  margin-bottom: 24rpx;
  line-height: 1.3;
}

.tags-row {
  margin-bottom: 40rpx;
}

.tags-row .tag {
  display: inline-block;
  background: #eff6ff;
  color: #2563eb;
  font-size: 22rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
  margin-bottom: 10rpx;
}

/* --- 风险进度条 --- */
.risk-bar-container {
  display: flex;
  align-items: center;
}

.risk-bar-label {
  font-size: 22rpx;
  color: #999;
  margin-right: 20rpx;
  width: 100rpx;
}

.risk-track {
  flex: 1;
  height: 12rpx;
  background: #f0f0f0;
  border-radius: 6rpx;
  overflow: hidden;
}

.risk-fill {
  height: 100%;
  border-radius: 6rpx;
  transition: width 1s ease-out; /* 动画效果 */
}

.result-card.severe .risk-fill { background: linear-gradient(90deg, #ff7875, #ff4d4f); }
.result-card.moderate .risk-fill { background: linear-gradient(90deg, #ffec3d, #faad14); }
.result-card.mild .risk-fill { background: linear-gradient(90deg, #95de64, #52c41a); }

/* --- 通用板块 --- */
.section-box {
  background: white;
  border-radius: 20rpx;
  padding: 36rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.02);
}

.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
}

.section-title .icon {
  margin-right: 12rpx;
  font-size: 32rpx;
}

.logic-content {
  font-size: 28rpx;
  color: #555;
  line-height: 1.7;
  text-align: justify;
}

/* --- 方案列表 --- */
.solution-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.solution-item {
  display: flex;
  align-items: flex-start;
  background: #f9fafb;
  padding: 20rpx;
  border-radius: 12rpx;
}

.sol-type {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  font-weight: 600;
  margin-top: 4rpx;
}

.cure-type {
  background: #e0f2fe;
  color: #0284c7;
}

.root-type {
  background: #f0fdf4;
  color: #16a34a;
}

.sol-text {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
}

/* --- 底部按钮 --- */
.footer-btn-group {
  margin-top: 60rpx;
  display: flex;
  gap: 24rpx;
}

.btn-primary {
  flex: 1.5;
  background: var(--primary-gradient);
  color: white;
  border-radius: 50rpx;
  font-size: 30rpx;
  font-weight: 600;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-secondary {
  flex: 1;
  background: white;
  color: #666;
  border: 1rpx solid #e5e7eb;
  border-radius: 50rpx;
  font-size: 30rpx;
  height: 88rpx;
  line-height: 88rpx;
}

.btn-text {
  margin-top: 30rpx;
  color: #999;
  font-size: 26rpx;
  background: transparent;
}