/* miniprogram/pages/user/user.wxss */
page {
  background-color: #f7f8fa; /* 清透浅灰底色 */
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  line-height: 1.5; 
  color: #333;
}

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  padding-bottom: 60rpx;
}

/* --- 1. 头部用户信息 --- */
.header {
  background-color: #ffffff;
  padding: 50rpx 40rpx; 
  display: flex;
  align-items: center;
  margin-bottom: 30rpx; 
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #eee;
  margin-right: 30rpx;
  border: 2rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.08);
}

.info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname {
  font-size: 38rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-bottom: 14rpx;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
  font-size: 22rpx;
  font-weight: 500;
  width: fit-content;
}

.normal-badge {
  background-color: #f2f3f5;
  color: #999;
}

.vip-badge {
  background: linear-gradient(90deg, #E6C78A, #CDA34F);
  color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(205, 163, 79, 0.3);
}

/* --- 2. VIP 卡片 (深炭灰渐变+香槟金) --- */
.vip-card {
  margin: 0 32rpx 40rpx;
  background: linear-gradient(135deg, #434343 0%, #2c3e50 100%); 
  border-radius: 28rpx;
  padding: 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 12rpx 30rpx rgba(44, 62, 80, 0.25);
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #FFEDC9;
}

.card-bg-circle {
  position: absolute;
  top: -80rpx;
  right: -80rpx;
  width: 300rpx;
  height: 300rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, rgba(255, 237, 201, 0.15), rgba(255, 255, 255, 0));
  z-index: 0;
  filter: blur(20rpx);
}

.card-content {
  position: relative;
  z-index: 1;
  display: flex;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}

.card-left {
  display: flex;
  flex-direction: column;
}

.card-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  letter-spacing: 1rpx;
}

.card-desc {
  font-size: 24rpx;
  color: rgba(255, 237, 201, 0.8);
  line-height: 1.4;
}

.buy-btn {
  margin: 0;
  padding: 0 36rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  background: linear-gradient(90deg, #FFEDC9, #E6C78A);
  color: #4a3f2b;
  border-radius: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(230, 199, 138, 0.3);
}

.buy-btn.disabled {
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.6);
  box-shadow: none;
}

/* --- 3. 数据统计栏 --- */
.stats-row {
  margin: 0 32rpx 30rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 36rpx 0;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.num {
  font-size: 44rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
  line-height: 1.1;
}

.label {
  font-size: 24rpx;
  color: #999;
}

.stat-divider {
  width: 2rpx;
  height: 50rpx;
  background-color: #eee;
}

/* --- 4. 菜单列表 --- */
.menu-list {
  margin: 0 32rpx 40rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 10rpx 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.02);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 0; /* 增加行间距 */
  border-bottom: 2rpx solid #f5f6f8;
}

.menu-item.last {
  border-bottom: none;
}

.menu-item:active {
  opacity: 0.7;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 38rpx;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  height: 100%; 
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 400;
}

.arrow {
  color: #ccc;
  font-size: 32rpx;
  font-weight: 300;
}

.lock-icon {
  font-size: 30rpx;
  color: #E6C78A;
  margin-right: 10rpx;
}