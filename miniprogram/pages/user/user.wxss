/* 页面背景 */
page {
  background-color: #f7f8fa;
  color: #333;
}

.container { padding-bottom: 40rpx; }

/* --- 1. 头部样式 --- */
.header {
  background-color: #fff;
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  border: 4rpx solid #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.nickname { 
  font-size: 38rpx; 
  font-weight: bold; 
  color: #1a1a1a; 
  display: block; 
  margin-bottom: 10rpx; 
}

.badge {
  display: inline-flex; align-items: center;
  padding: 6rpx 20rpx; border-radius: 30rpx; font-size: 22rpx;
}
.normal-badge { background: #f2f3f5; color: #999; }
.vip-badge { background: linear-gradient(90deg, #E6C78A, #CDA34F); color: #fff; }

/* --- 2. VIP 卡片 (重点修复部分) --- */
.vip-card {
  margin: 0 32rpx 40rpx;
  background: linear-gradient(135deg, #333 0%, #1a1a1a 100%);
  border-radius: 24rpx; 
  padding: 40rpx;
  color: #fff; 
  position: relative; 
  overflow: hidden;
}

.card-bg-circle {
  position: absolute; right: -40rpx; top: -40rpx;
  width: 200rpx; height: 200rpx;
  background: rgba(255,255,255,0.05); border-radius: 50%;
}

/* Flex 布局：确保左右排布，不重叠 */
.card-content {
  position: relative; 
  z-index: 1;
  display: flex; /* 开启左右并排 */
  justify-content: space-between; /* 两端对齐 */
  align-items: flex-end; /* 底部对齐 */
}

/* 左侧区域：占满剩余空间 */
.card-left {
  flex: 1; 
  margin-right: 20rpx; /* 给右边按钮留点空隙 */
}

.card-title { 
  font-size: 34rpx; 
  font-weight: bold; 
  color: #fbdc9d; 
  margin-bottom: 10rpx; 
  display: block; 
}
.card-desc { font-size: 24rpx; color: rgba(255,255,255,0.7); }

/* 输入框样式 */
.redeem-box { width: 100%; margin-top: 15rpx; }
.code-input {
  background: rgba(255,255,255,0.1); 
  border: 1rpx solid rgba(255,255,255,0.2);
  border-radius: 10rpx; 
  height: 64rpx; 
  padding: 0 20rpx; 
  color: #fff; 
  font-size: 28rpx;
  width: 100%;
  box-sizing: border-box; 
}
.code-input-placeholder { color: rgba(255,255,255,0.3); }

/* 右侧按钮：固定大小，不许收缩 */
.card-right { flex-shrink: 0; }

.buy-btn {
  background: linear-gradient(90deg, #fbdc9d, #f3c258);
  color: #5c3a00; 
  font-size: 26rpx; 
  font-weight: bold;
  padding: 0 30rpx; 
  height: 64rpx; 
  line-height: 64rpx; 
  border-radius: 32rpx;
  margin: 0;
}
.buy-btn.disabled { background: #444; color: #888; }

/* --- 3. 统计与列表 --- */
.stats-row {
  margin: 0 32rpx 30rpx; background: #fff; border-radius: 20rpx;
  padding: 30rpx 0; display: flex; align-items: center;
}
.stat-item { flex: 1; text-align: center; }
.num { font-size: 40rpx; font-weight: bold; color: #2fa348; display: block; }
.label { font-size: 24rpx; color: #999; }
.stat-divider { width: 2rpx; height: 40rpx; background: #eee; }

.menu-list { margin: 0 32rpx; background: #fff; border-radius: 20rpx; padding: 0 30rpx; }
.menu-item {
  display: flex; justify-content: space-between; align-items: center;
  padding: 36rpx 0; border-bottom: 1rpx solid #f9f9f9;
}
.menu-item:last-child { border-bottom: none; }
.menu-left { display: flex; align-items: center; }
.menu-icon { font-size: 36rpx; margin-right: 20rpx; }
.menu-text { font-size: 30rpx; color: #333; }
.lock-icon { font-size: 28rpx; margin-right: 10rpx; color: #E6C78A; }
.arrow { color: #ccc; font-size: 32rpx; }

/* 客服按钮特殊处理 */
.contact-btn {
  background: #fff !important;
  margin: 0 !important;
  padding: 36rpx 0 !important;
  font-weight: normal !important;
  line-height: normal !important;
  display: flex !important;
  justify-content: space-between !important;
  align-items: center !important;
}
.contact-btn::after { border: none; }