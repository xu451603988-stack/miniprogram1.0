/** miniprogram/pages/index/index.wxss */
page {
  /* 已经在 app.wxss 定义了变量，这里直接用 */
}

.page-container {
  min-height: 100vh;
  padding: 40rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-container {
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}

.crop-icon {
  font-size: 100rpx;
  /* 增加一点阴影效果 */
  text-shadow: 0 10rpx 30rpx rgba(45, 140, 45, 0.2);
}

.title-wrapper {
  text-align: center;
  margin-bottom: 80rpx;
}

.main-title {
  font-size: 44rpx;
  font-weight: 800;
  color: #1a1a1a;
  line-height: 1.4;
  display: block;
}

.sub-title {
  font-size: 28rpx;
  color: #666;
  margin-top: 16rpx;
  display: block;
  letter-spacing: 2rpx;
}

.button-container {
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.diagnose-button {
  width: 100%;
  height: 110rpx;
  /* 使用全局渐变变量 */
  background: var(--primary-gradient);
  color: white;
  font-size: 36rpx;
  font-weight: 600;
  border-radius: 60rpx;
  box-shadow: 0 12rpx 30rpx rgba(45, 140, 45, 0.35);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.btn-hover {
  transform: translateY(4rpx);
  box-shadow: 0 6rpx 15rpx rgba(45, 140, 45, 0.25);
}

.arrow-icon {
  margin-left: 20rpx;
  font-size: 32rpx;
  font-weight: 300;
}

/* --- 最近记录卡片样式 --- */
.recent-card {
  width: 100%;
  margin-top: 50rpx;
  background: white;
  border-radius: 24rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
  border: 1rpx solid rgba(0,0,0,0.02);
}

.recent-card:active {
  background-color: #fafafa;
}

.recent-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.recent-label {
  font-size: 24rpx;
  font-weight: 600;
  color: #999;
  text-transform: uppercase;
  letter-spacing: 1rpx;
}

.recent-time {
  font-size: 22rpx;
  color: #ccc;
}

.recent-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.recent-info {
  display: flex;
  flex-direction: column;
}

.recent-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 8rpx;
}

.recent-tags {
  font-size: 24rpx;
  color: #666;
}

/* 状态圆点 */
.status-dot {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255,255,255,0.8);
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.1);
}

.status-dot.severe { background-color: #ff4d4f; }
.status-dot.moderate { background-color: #faad14; }
.status-dot.mild { background-color: #52c41a; }
.status-dot.none { background-color: #d9d9d9; }

/* 底部 */
.footer {
  margin-top: auto;
  padding-bottom: 20rpx;
}

.footer-text {
  font-size: 22rpx;
  color: #c0c4cc;
}