/* pages/orangeForm/orangeForm.wxss */
.container {
  padding: 30rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  min-height: 100vh;
}

.form-header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2d8c2d;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  color: #666;
}

.section {
  margin-bottom: 40rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 25rpx;
  padding-left: 15rpx;
  border-left: 8rpx solid #2d8c2d;
}

.phenology-selector {
  margin-bottom: 20rpx;
}

.picker-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 10rpx;
  border: 2rpx solid #e9ecef;
}

.picker-label {
  font-size: 28rpx;
  color: #495057;
}

.picker-value {
  font-size: 30rpx;
  font-weight: bold;
  color: #2d8c2d;
  flex: 1;
  text-align: center;
}

.picker-arrow {
  color: #6c757d;
  font-size: 24rpx;
}

.phenology-info {
  display: flex;
  align-items: center;
  padding: 15rpx;
  background: #e8f5e9;
  border-radius: 10rpx;
  margin-top: 15rpx;
}

.phenology-label {
  font-size: 26rpx;
  color: #155724;
  margin-right: 10rpx;
}

.phenology-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #155724;
}

.question-hint {
  font-size: 24rpx;
  color: #6c757d;
  margin-bottom: 25rpx;
  padding: 15rpx;
  background: #fff3cd;
  border-radius: 10rpx;
  border-left: 4rpx solid #ffc107;
}

.question {
  margin-bottom: 30rpx;
  padding: 25rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
  border: 1rpx solid #e9ecef;
}

.question-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #212529;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 5rpx solid #2d8c2d;
}

.option {
  display: block;
  font-size: 26rpx;
  color: #495057;
  margin-bottom: 15rpx;
  padding: 15rpx 20rpx;
  background: white;
  border-radius: 8rpx;
  border: 1rpx solid #dee2e6;
  transition: all 0.2s;
}

.option:active {
  background: #e8f5e9;
  border-color: #2d8c2d;
}

.option radio, .option checkbox {
  margin-right: 15rpx;
  transform: scale(0.9);
}

.submit-btn {
  width: 90%;
  background: linear-gradient(135deg, #2d8c2d, #1a7346);
  color: white;
  font-size: 32rpx;
  padding: 30rpx 0;
  border-radius: 60rpx;
  margin: 50rpx auto 30rpx;
  box-shadow: 0 8rpx 25rpx rgba(45,140,45,0.4);
  font-weight: 500;
}

.submit-btn:active {
  transform: translateY(2rpx);
}