<!-- pages/orangeForm/orangeForm.wxml -->
<view class="container">
  <view class="form-header">
    <view class="form-title">🍊 作物健康诊断系统</view>
    <view class="subtitle">基于物候期的智能诊断 V2.0</view>
  </view>

  <view class="section phenology-section">
    <view class="section-title">📅 选择当前月份</view>
    <view class="phenology-selector">
      <picker bindchange="onMonthChange" value="{{currentMonth-1}}" range="{{optionLabels.phenology_input}}">
        <view class="picker-box">
          <text class="picker-label">当前月份：</text>
          <text class="picker-value">{{optionLabels.phenology_input[currentMonth-1]}}</text>
          <text class="picker-arrow">▼</text>
        </view>
      </picker>
    </view>
  </view>

  <view style="padding: 60rpx 40rpx; text-align: center; color: #999;">
    <text>选择月份后开始诊断</text>
  </view>
</view>